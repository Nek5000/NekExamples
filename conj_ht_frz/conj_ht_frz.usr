      ffz = 0.0

      return
      end
c-----------------------------------------------------------------------
      subroutine userq  (ix,iy,iz,ieg)
      include 'SIZE'
      include 'TOTAL'
      include 'NEKUSE'
 
      pi = 4.0*atan(1.0)
      omega = 2*pi*uparam(1)
      amp = uparam(2)

      ! Adding a sinusoidal to the heat deposition in the solid
      qvol = 0.0
      if (ieg.gt.nelgv) qvol = 1.0+amp*sin(omega*time)

      return
      end
c-----------------------------------------------------------------------
      subroutine userchk
      include 'SIZE'
      include 'TOTAL'

      common /scrns/ w1   (lx1,ly1,lz1,lelt)
     $              ,terr (lx1,ly1,lz1,lelt)

      nv = nx1*ny1*nz1*nelv
      nt = nx1*ny1*nz1*nelt
 
      ! compare the two scalars
      if (mod(istep,100).eq.0) then
         call sub3(terr,t,t(1,1,1,1,2),nt)
         terrmaxa = glamax(terr,nt)
         call invcol2(terr,t,nt)
         terrmaxr = glamax(terr,nt)

         if (nid.eq.0) write(6,1) istep,time,terrmaxa,terrmaxr
   1     format(i9,1p3e12.5,' terr')
      endif

      return
      end
